    "feature_gating": {
        "method": "license_key_validation",
        "enforcement": "server_side",
        "graceful_degradation": true,
        "features": {
            "ai_layout": {
                "free": true,
                "daily_limit": "tier_based"
            },
            "plugins": {
                "free": true,
                "marketplace": "starter_plus"
            },
            "advanced_analytics": {
                "free": false,
                "tier": "professional"
            },
            "sso_saml": {
                "free": false,
                "tier": "enterprise"
            },
            "audit_logs": {
                "free": false,
                "tier": "enterprise"
            },
            "custom_domain": {
                "free": false,
                "tier": "professional"
            }
        }
    },
    "plugin_licensing": {
        "core_plugins": {
            "license": "included",
            "examples": [
                "Basic shipping",
                "Standard export"
            ]
        },
        "marketplace_plugins": {
            "license": "per_plugin",
            "models": [
                "free",
                "one_time",
                "subscription"
            ],
            "revenue_share": "70/30 developer/platform"
        },
        "enterprise_plugins": {
            "license": "enterprise_tier",
            "examples": [
                "ERP integration",
                "Custom workflows"
            ]
        }
    },
    "license_verification": {
        "method": "api_key_validation",
        "frequency": "on_startup_and_daily",
        "offline_grace_period_days": 7,
        "tamper_detection": true
    },
    "terms": {
        "terms_of_service": "/legal/terms",
        "privacy_policy": "/legal/privacy",
        "acceptable_use": "/legal/aup",
        "data_processing_agreement": "/legal/dpa"
    },
    "compliance": {
        "gdpr": {
            "dpa_available": true,
            "data_export": true,
            "data_deletion": true
        },
        "export_control": {
            "itar": "not_applicable",
            "ear": "not_applicable"
        }
    }
