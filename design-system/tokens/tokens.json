{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "name": "3D Commerce Design Tokens",
  "version": "1.0.0",
  "description": "Token-driven design system for cross-platform commerce + manufacturing UI",
  
  "color": {
    "primary": {
      "$value": "#6366f1",
      "$type": "color",
      "$description": "Primary brand color - used for main actions and emphasis"
    },
    "primary-hover": { "$value": "#4f46e5", "$type": "color" },
    "primary-light": { "$value": "#a5b4fc", "$type": "color" },
    "primary-dark": { "$value": "#3730a3", "$type": "color" },
    
    "secondary": {
      "$value": "#0ea5e9",
      "$type": "color",
      "$description": "Secondary brand color - used for supporting elements"
    },
    "secondary-hover": { "$value": "#0284c7", "$type": "color" },
    "secondary-light": { "$value": "#7dd3fc", "$type": "color" },
    "secondary-dark": { "$value": "#0369a1", "$type": "color" },
    
    "accent": {
      "$value": "#f59e0b",
      "$type": "color",
      "$description": "Accent color - used for highlights and CTAs"
    },
    "accent-hover": { "$value": "#d97706", "$type": "color" },
    "accent-light": { "$value": "#fcd34d", "$type": "color" },
    "accent-dark": { "$value": "#b45309", "$type": "color" },
    
    "background": {
      "$value": "#0f172a",
      "$type": "color",
      "$description": "Main background color"
    },
    "background-alt": { "$value": "#1e293b", "$type": "color" },
    
    "surface": {
      "$value": "#1e293b",
      "$type": "color",
      "$description": "Surface/card background color"
    },
    "surface-hover": { "$value": "#334155", "$type": "color" },
    "surface-elevated": { "$value": "#334155", "$type": "color" },
    
    "text": {
      "primary": { "$value": "#f8fafc", "$type": "color" },
      "secondary": { "$value": "#94a3b8", "$type": "color" },
      "muted": { "$value": "#64748b", "$type": "color" },
      "inverse": { "$value": "#0f172a", "$type": "color" }
    },
    
    "success": { "$value": "#22c55e", "$type": "color" },
    "success-light": { "$value": "#86efac", "$type": "color" },
    "success-dark": { "$value": "#15803d", "$type": "color" },
    
    "warning": { "$value": "#f59e0b", "$type": "color" },
    "warning-light": { "$value": "#fcd34d", "$type": "color" },
    "warning-dark": { "$value": "#b45309", "$type": "color" },
    
    "error": { "$value": "#ef4444", "$type": "color" },
    "error-light": { "$value": "#fca5a5", "$type": "color" },
    "error-dark": { "$value": "#b91c1c", "$type": "color" },
    
    "border": { "$value": "#334155", "$type": "color" },
    "border-light": { "$value": "#475569", "$type": "color" },
    "border-focus": { "$value": "#6366f1", "$type": "color" }
  },
  
  "typography": {
    "fontFamily": {
      "heading": {
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$type": "fontFamily"
      },
      "body": {
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "'JetBrains Mono', 'Fira Code', 'Consolas', monospace",
        "$type": "fontFamily"
      }
    },
    "fontSize": {
      "heading-xl": { "$value": "3rem", "$type": "dimension" },
      "heading-lg": { "$value": "2.25rem", "$type": "dimension" },
      "heading-md": { "$value": "1.5rem", "$type": "dimension" },
      "heading-sm": { "$value": "1.25rem", "$type": "dimension" },
      "body-lg": { "$value": "1.125rem", "$type": "dimension" },
      "body-regular": { "$value": "1rem", "$type": "dimension" },
      "body-small": { "$value": "0.875rem", "$type": "dimension" },
      "button-text": { "$value": "0.875rem", "$type": "dimension" },
      "caption": { "$value": "0.75rem", "$type": "dimension" }
    },
    "fontWeight": {
      "regular": { "$value": "400", "$type": "fontWeight" },
      "medium": { "$value": "500", "$type": "fontWeight" },
      "semibold": { "$value": "600", "$type": "fontWeight" },
      "bold": { "$value": "700", "$type": "fontWeight" }
    },
    "lineHeight": {
      "tight": { "$value": "1.25", "$type": "number" },
      "normal": { "$value": "1.5", "$type": "number" },
      "relaxed": { "$value": "1.75", "$type": "number" }
    },
    "letterSpacing": {
      "tight": { "$value": "-0.025em", "$type": "dimension" },
      "normal": { "$value": "0", "$type": "dimension" },
      "wide": { "$value": "0.025em", "$type": "dimension" }
    }
  },
  
  "spacing": {
    "xs": { "$value": "0.25rem", "$type": "dimension", "$description": "4px" },
    "sm": { "$value": "0.5rem", "$type": "dimension", "$description": "8px" },
    "md": { "$value": "1rem", "$type": "dimension", "$description": "16px" },
    "lg": { "$value": "1.5rem", "$type": "dimension", "$description": "24px" },
    "xl": { "$value": "2rem", "$type": "dimension", "$description": "32px" },
    "2xl": { "$value": "3rem", "$type": "dimension", "$description": "48px" },
    "3xl": { "$value": "4rem", "$type": "dimension", "$description": "64px" },
    "4xl": { "$value": "6rem", "$type": "dimension", "$description": "96px" }
  },
  
  "elevation": {
    "none": { "$value": "none", "$type": "shadow" },
    "sm": { 
      "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)", 
      "$type": "shadow" 
    },
    "md": { 
      "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)", 
      "$type": "shadow" 
    },
    "lg": { 
      "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)", 
      "$type": "shadow" 
    },
    "xl": { 
      "$value": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)", 
      "$type": "shadow" 
    },
    "glow": { 
      "$value": "0 0 20px rgba(99, 102, 241, 0.3)", 
      "$type": "shadow" 
    }
  },
  
  "motion": {
    "duration": {
      "fast": { "$value": "150ms", "$type": "duration" },
      "normal": { "$value": "300ms", "$type": "duration" },
      "slow": { "$value": "500ms", "$type": "duration" }
    },
    "easing": {
      "in": { "$value": "cubic-bezier(0.4, 0, 1, 1)", "$type": "cubicBezier" },
      "out": { "$value": "cubic-bezier(0, 0, 0.2, 1)", "$type": "cubicBezier" },
      "in-out": { "$value": "cubic-bezier(0.4, 0, 0.2, 1)", "$type": "cubicBezier" },
      "bounce": { "$value": "cubic-bezier(0.68, -0.55, 0.265, 1.55)", "$type": "cubicBezier" }
    }
  },
  
  "borderRadius": {
    "none": { "$value": "0", "$type": "dimension" },
    "sm": { "$value": "0.25rem", "$type": "dimension" },
    "md": { "$value": "0.5rem", "$type": "dimension" },
    "lg": { "$value": "0.75rem", "$type": "dimension" },
    "xl": { "$value": "1rem", "$type": "dimension" },
    "2xl": { "$value": "1.5rem", "$type": "dimension" },
    "full": { "$value": "9999px", "$type": "dimension" }
  },
  
  "zIndex": {
    "dropdown": { "$value": "100", "$type": "number" },
    "sticky": { "$value": "200", "$type": "number" },
    "fixed": { "$value": "300", "$type": "number" },
    "modal-backdrop": { "$value": "400", "$type": "number" },
    "modal": { "$value": "500", "$type": "number" },
    "popover": { "$value": "600", "$type": "number" },
    "tooltip": { "$value": "700", "$type": "number" }
  },
  
  "devices": {
    "breakpoints": {
      "mobile": { "$value": "320px", "$type": "dimension" },
      "tablet": { "$value": "768px", "$type": "dimension" },
      "desktop": { "$value": "1024px", "$type": "dimension" },
      "wide": { "$value": "1280px", "$type": "dimension" }
    }
  }
}
