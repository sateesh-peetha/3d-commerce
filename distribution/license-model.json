        "excludes": [
            "Enterprise plugins",
            "Premium support",
            "SLA guarantees"
        ]
    },
    "commercial_license": {
        "name": "3D Commerce Professional",
        "type": "commercial",
        "tiers": [
            {
                "name": "Starter",
                "price": "Free",
                "limits": {
                    "products": 100,
                    "storage_gb": 5,
                    "orders_per_month": 100,
                    "team_members": 1,
                    "ai_calls_per_day": 50
