                "features": [
                    "Core commerce",
                    "Basic analytics",
                    "Community support"
                ]
            },
            {
                "name": "Professional",
                "price": "$99/month",
                "limits": {
                    "products": 10000,
                    "storage_gb": 100,
                    "orders_per_month": 10000,
                    "team_members": 10,
                    "ai_calls_per_day": 500
                },
                "features": [
                    "All Starter features",
                    "Advanced analytics",
                    "Email support",
                    "Custom domain",
                    "Priority bug fixes"
                ]
            },
            {
                "name": "Enterprise",
                "price": "Custom",
                "limits": {
                    "products": "Unlimited",
                    "storage_gb": "Unlimited",
                    "orders_per_month": "Unlimited",
                    "team_members": "Unlimited",
