rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // === HELPER FUNCTIONS ===
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return getUserRole() == 'admin' || getUserRole() == 'super_admin';
    }
    
    function isSuperAdmin() {
      return getUserRole() == 'super_admin';
    }
    
    // === GOLDEN PATH COLLECTIONS ===
    
    // Products - Public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Materials - Public read, admin write
    match /materials/{materialId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users - Owner or admin read, owner write
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if isSuperAdmin();
    }
    
    // Carts - Owner only
    match /carts/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Orders - Owner read, owner create, admin read/update
    match /orders/{orderId} {
      // Customer can read own, admin can read all
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Customer can create own order
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Only admin can update orders
      allow update: if isAdmin();
      
      // Only super_admin can delete
      allow delete: if isSuperAdmin();
    }
    
    // API Keys - Admin only
    match /apiKeys/{keyId} {
      allow read, write: if isAdmin();
    }
    
    // Layout Configs - Admin only
    match /layoutConfigs/{screenId} {
      allow read: if true; // Public read for rendering
      allow write: if isAdmin();
    }
    
    // Printers - Admin only
    match /printers/{printerId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Admin Metrics - Admin only
    match /adminMetrics/{metricId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }
    
    // === SECURITY: DENY ALL OTHER ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
