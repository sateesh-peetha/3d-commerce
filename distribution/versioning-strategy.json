{
    "version": "1.0.0",
    "created": "2026-02-05T10:30:00Z",
    "description": "Versioning strategy for 3D Commerce platform releases",
    "versioning_scheme": {
        "format": "MAJOR.MINOR.PATCH",
        "standard": "Semantic Versioning 2.0.0",
        "reference": "https://semver.org/"
    },
    "version_components": {
        "major": {
            "description": "Breaking changes",
            "examples": [
                "API contract changes",
                "Database schema migrations required",
                "Plugin SDK breaking changes",
                "Removed deprecated features"
            ],
            "requires": [
                "Migration guide",
                "Deprecation notice in prior minor version",
                "Minimum 30-day notice for breaking changes"
            ]
        },
        "minor": {
            "description": "New features, backward compatible",
            "examples": [
                "New API endpoints",
                "New UI features",
                "New plugin capabilities",
                "Performance improvements"
            ],
            "requires": [
                "Feature documentation",
                "Updated API docs"
            ]
        },
        "patch": {
            "description": "Bug fixes, security patches",
            "examples": [
                "Bug fixes",
                "Security patches",
                "Performance fixes",
                "Dependency updates"
            ],
            "requires": [
                "Changelog entry"
            ]
        }
    },
    "pre_release_labels": {
        "alpha": {
            "format": "X.Y.Z-alpha.N",
            "stability": "unstable",
            "purpose": "Early testing, features incomplete"
        },
        "beta": {
            "format": "X.Y.Z-beta.N",
            "stability": "testing",
            "purpose": "Feature complete, testing phase"
        },
        "rc": {
            "format": "X.Y.Z-rc.N",
            "stability": "stable candidate",
            "purpose": "Release candidate, final testing"
        }
    },
    "release_branches": {
        "main": {
            "purpose": "Latest stable development",
            "auto_deploy": "staging"
        },
        "release/X.Y": {
            "purpose": "Release preparation",
            "lifetime": "Until X.Y.0 released"
        },
        "hotfix/X.Y.Z": {
            "purpose": "Emergency patches",
            "lifetime": "Until patch released"
        }
    },
    "backward_compatibility": {
        "api_compatibility": {
            "rule": "Minor versions must be backward compatible",
            "deprecation_policy": "Minimum 2 minor versions before removal",
            "notification": "Deprecation warnings in response headers"
        },
        "database_compatibility": {
            "rule": "Migrations must support upgrade from N-2 versions",
            "rollback": "Migrations must be reversible"
        },
        "plugin_compatibility": {
            "sdk_version": "Plugin SDK version tracked separately",
            "compatibility_matrix": "Published in plugin docs",
            "breaking_changes": "Major version bump required"
        }
    },
    "version_matrix": {
        "current": "1.0.0",
        "supported": [
            {
                "version": "1.0.x",
                "status": "current",
                "support_until": "TBD"
            }
        ],
        "upgrade_paths": [
            {
                "from": "0.x",
                "to": "1.0",
                "migration_required": true,
                "guide": "/docs/migration/0x-to-1x.md"
            }
        ]
    },
    "release_process": {
        "steps": [
            "1. Create release branch",
            "2. Update version in package.json",
            "3. Update CHANGELOG.md",
            "4. Run full test suite",
            "5. Create release candidate",
            "6. Deploy to staging",
            "7. QA validation",
            "8. Merge to main",
            "9. Tag release",
            "10. Deploy to production",
            "11. Publish release notes"
        ],
        "automation": {
            "version_bump": "npm version",
            "changelog": "conventional-changelog",
            "tagging": "git tag with message"
        }
    },
    "artifact_versioning": {
        "docker_images": {
            "format": "REGISTRY/IMAGE:VERSION",
            "tags": [
                "latest",
                "X.Y.Z",
                "X.Y",
                "X"
            ]
        },
        "npm_packages": {
            "format": "X.Y.Z with dist-tag",
            "tags": [
                "latest",
                "next",
                "beta"
            ]
        }
    }
}